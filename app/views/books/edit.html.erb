<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<% if @book.errors.any?  %>
<h3>There are <%= @book.errors.count %> errors</h3>
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<%= link_to "Show",booklist_path(@book.id)%>
<%=link_to "Back",booking_path %>

<% end %>